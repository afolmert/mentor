procedure TForm1.Button1Click(Sender: TObject);
var
 B, B2 : TBitmap;
 P : PByteArray;
 X, Y : Integer;
 C : Integer;
 R : TRect;
begin
 B := TBitmap.Create;
 B2 := TBitmap.Create;
 try
   B.LoadFromFile('d:\splash.bmp');
   B2.LoadFromFile('d:\splash2.bmp');

   Canvas.Draw(0, 0, B);

   R := Rect(100, 100, 170, 170);

   Canvas.Rectangle(R.Left, R.Top, R.Right, R.Bottom);
   Bevel1.SetBounds(R.Left + 1, R.Top + 1, R.Right - R.Left + 1, R.Bottom - R.Top + 1);


   Canvas.CopyRect(R, B2.Canvas, R);

 finally
   B.Free;
   B2.Free;
 end;
end;






